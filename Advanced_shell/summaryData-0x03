#!/bin/bash

# Output file
OUTPUT_FILE="pokemon_report.csv"
DATA_DIR="pokemon_data"

# Initialize CSV file with header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through each JSON file
for file in $DATA_DIR/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize
    height_dm=$(jq -r '.height' "$file")             # decimetres
    weight_hg=$(jq -r '.weight' "$file")             # hectograms

    # Convert to m and kg with 1 decimal place
    height_m=$(awk "BEGIN {printf \"%.1f\", $height_dm / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

# Display CSV generation message
echo "CSV Report generated at: $OUTPUT_FILE"
echo

# Print the CSV content
cat "$OUTPUT_FILE"

# Calculate averages
awk -F, 'NR > 1 {height += $2; weight += $3; count++} 
         END {
             printf "\nAverage Height: %.2f m\n", height/count
             printf "Average Weight: %.2f kg\n", weight/count
         }' "$OUTPUT_FILE"
